<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="CustomerDataGrid"
              Grid.Column="0"
              Margin="5"
              AutoGenerateColumns="True" 
              SelectionMode="Single"
              ItemsSource="{Binding Customers}"
              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" />

        <StackPanel Grid.Column="1" Margin="10">
            <Image Source="{Binding SelectedCustomer.ImagePath}" 
               Width="100" Height="100" 
               Stretch="Uniform" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Left" 
               Margin="0,0,0,10" />

            <TextBlock Text="名前:" />
            <TextBox Text="{Binding SelectedCustomer.Name, Mode=TwoWay}" Margin="0,0,0,5" />

            <TextBlock Text="電話番号:" />
            <TextBox Text="{Binding SelectedCustomer.PhoneNumber, Mode=TwoWay}" Margin="0,0,0,5" />

            <TextBlock Text="住所:" />
            <TextBox Text="{Binding SelectedCustomer.Address, Mode=TwoWay}" Margin="0,0,0,15" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="新規登録" Click="New_Click" Margin="5" />
                <Button Content="更新" Click="Save_Click" Margin="5" />
                <Button Content="削除" Click="Delete_Click" Margin="5" />
                <Button Content="画像選択" Click="SelectImage_Click" Margin="5" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
